<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Anime Tracker</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="styles/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;700&family=Inter:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <main>
        <div class="main-wrap">
            <div class="hero">
                <div class="hero-content">
                    <h1 class="hero-title">Anime Tracker <br> Jikan API </h1>
                    <p class="hero-subtitle">A simple anime tracker using <a href="https://jikan.moe/" target="_blank">Jikan API</a></p>
                </div>
            </div>
            <div class="cards-main">
                <ul class="cards-list">
                    <% if (animeList && animeList.length > 0) {%>
                    <% animeList.forEach((anime, i) => { %>
                    <li class="card-item">
                        <a href=<%= animeList[i].url %> class="anchor-wrap">
                            <div class="card-anime-cover">
                                <img src=<%= animeList[i].images.jpg.image_url %> alt="<%= animeList[i].title %> image" >
                                <div class="cardAnime__overlay">
                                    <div class="cardAnime__rated">
                                        <small class="rating"><%= animeList[i].rating %></small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-anime-body">
                                <div class="chip chip-size-small chip-selectable">
                                    <span class="airing--status" style="color: <%= animeList[i].airing ? 'var(--primary-200)' : '#f7c0a1' %>;">
                                        <%= animeList[i].status %>
                                    </span>
                                </div>
                                <div class="card-anime-meta">
                                    <small><%= animeList[i].season %> <%= animeList[i].year %></small>
                                    <div class="divider divider-type-circle"></div>
                                    <small class="episodes-number"><%= animeList[i].episodes %> episodes</small>
                                </div>
                                <p class="card-anime-title"><%= animeList[i].title %></p>
                                <div class="card-anime-rating">
                                    <div class="card-anime-score">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="tabler-icon tabler-icon-star">
                                            <path d="M12 17.75l-6.172 3.245l1.179 -6.873l-5 -4.867l6.9 -1l3.086 -6.253l3.086 6.253l6.9 1l-5 4.867l1.179 6.873z"></path>
                                        </svg> <%= animeList[i].score %>
                                        <small><%= animeList[i].scored_by %> users</small>
                                    </div>
                                    <div class="card-anime-rank">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="tabler-icon tabler-icon-hash">
                                            <path d="M5 9l14 0"></path>
                                            <path d="M5 15l14 0"></path>
                                            <path d="M11 4l-4 16"></path>
                                            <path d="M17 4l-4 16"></path>
                                        </svg> <%= animeList[i].rank %>
                                        <small>Ranking</small>
                                    </div>
                                </div>

                                <div class="card-anime-genres">
                                    <% animeList[i].genres.slice(0, 2).forEach((genre) => {%>
                                    <div class="chip chip-type-flat chip-size-small chip-selectable">
                                        <span class="genere-name"><%= genre.name %></span>
                                    </div>
                                    <% }); %>
                                    <% if (animeList[i].genres.length > 2) { %>
                                    <div class="chip chip-type-flat chip-size-small chip-selectable">
                                        <span>+<%= animeList[i].genres.length - 2 %></span>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </a>
                    </li>
                    <% }); %>
                    <% } %>
                </ul>
            </div>
            <div class="pagination-main">
                <div class="pagination-wrap">
                    <div class="pagination-current">Page <span class="current-page"><%= currentPage %></span> of <span class="no-pages"><%= numberOfPages %></span></div>
                <ul class="pagination" >
                        <% if (hasPrevPage) { %>
                            <li>
                                <a href="/prev" class="pagination-link">Previous</a>
                            </li>
                        <% } %>
                        <li>
                        <% if (hasNextPage) { %>
                            <a href="/next" class="pagination-link">Next</a>
                        <% } %>
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </main>
</body>
</html>